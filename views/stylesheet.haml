.activity-input
  %nav.tabbar
    %ul
      %li.current-tab>
        %a#new-note.current-tab{:href => "people/0/timeline"}> Status
      %li>
        %a#new-image{:href => "people/0/favorites"}> Image
      %li>
        %a#new-post{:href => "people/0/mentions"}> Post
      %li>
        %a#new-follow{:href => "people/0/following"}> Follow
  %form#note-input{:action => "/people/0/activities", :method => 'post', :name => 'activity'}
    %label{:for => 'content'}
      What's going on?
    %textarea{:name => 'content'}
    %input.button{:type => 'hidden', :name => 'type', :value => 'note'}
    %input.button{:type => 'submit', :value => 'save'}>
    %input.button{:type => 'submit', :value => 'share'}
  %form#post-input{:action => "/people/0/activities", :method => 'post', :name => 'activity'}
    %label{:for => 'markdown'}
      What's on your mind?
    %input.title{:name => 'title', :value => 'Title'}
    %textarea{:name => 'markdown', :id => "post-area"}
    %input{:type => 'hidden', :name => 'type', :value => 'article'}
    %input.button{:type => 'submit', :value => 'save'}>
    %input.button{:type => 'submit', :value => 'share'}
  %form#image-input{:action => "/people/0/activities", :method => 'post', :name => 'activity', :enctype=>"multipart/form-data"}
    %label{:for => 'file'}
      What do you see?
    #image-preview
    %input.title{:name => 'url', :value => 'URL or upload file:'}
    %input.file{:name => 'file', :type => 'file'}
    %input{:type => 'hidden', :name => 'type', :value => 'image'}
    %textarea{:name => 'title'}
    %input.button{:type => 'submit', :value => 'save'}>
    %input.button{:type => 'submit', :value => 'share'}
  %form#follow-input{:action => "/people/0/following", :method => 'post', :name => 'activity'}
    %label{:for => 'discover'}
      Who do you want to follow?
    %input.person{:name => 'discover', :value => 'name@service.tld'}
    %input.button{:type => 'submit', :value => 'follow'}

%nav.tabbar
  %ul
    %li.current-tab>
      %a#timeline-tab.current-tab{:"data-pjax" => true, :href => "/people/0/timeline"}> Timeline
    %li>
      %a#mentions-tab{:"data-pjax" => true, :href => "/people/0/mentions"}> Mentions
    %li>
      %a#favorites-tab{:"data-pjax" => true, :href => "/people/0/favorites"}> Favorites
    %li>
      %a#shared-tab{:"data-pjax" => true, :href => "/people/0/shared"}> Shared
