  = partial :"activities/show", {:locals => {:show_as_activity => true, :activity => Lotus::Activity.new({ :published => Time.now - 61, :updated => Time.now - 61, :verb => :share, :actor => Lotus::Person.new(:display_name => "wilkie"), :object => Lotus::Activity.new({ :published => Time.now - 121, :updated => Time.now - 121, :verb => :post, :actor => Lotus::Person.new(:display_name => "jess"), :object => Lotus::Note.new(:html => "Hello"), :type => :note })})}}
  = partial :"activities/show", {:locals => {:show_as_activity => true, :activity => Lotus::Activity.new({ :published => Time.now - 121, :updated => Time.now - 121, :verb => :favorite, :actor => Lotus::Person.new(:display_name => "wilkie"), :object => Lotus::Activity.new({ :published => Time.now - 3600, :updated => Time.now - 3600, :verb => :post, :actor => Lotus::Person.new(:display_name => "jess"), :object => Lotus::Note.new(:html => "Hello"), :type => :note })})}}
